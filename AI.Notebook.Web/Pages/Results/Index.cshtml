@page
@model AI.Notebook.Web.Pages.Results.IndexModel
@{
    ViewData["Title"] = "Results";
}
@section header {
	<link rel="stylesheet" href="~/lib/plugins/jquery-daterangepicker/daterangepicker.css" />
}
